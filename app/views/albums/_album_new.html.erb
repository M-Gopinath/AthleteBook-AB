<div class="album-details">
	<div class="add-album-details">
		<h6>Create Album Name</h6>
		<%= form_for :album ,url:albums_album_create_path, remote:true,method: :post do |f| %>
		<fieldset class="form-group">
			<label for="formGroupExampleInput">Album Name</label>
			<%= f.text_field :album_name, class: "form-control" %>
		</fieldset>
		<%=hidden_field :user_id ,value:current_user.id%>
		<fieldset class="form-group">
			<button class="submit_btn btn btn-primary" type="submit" >Save</button>
		</fieldset>
		<%end%>
		<fieldset class="form-group">
			<button class="btn btn-default upload-cancel-btn">Cancel</button> 
		</fieldset>
	</div>
</div>
